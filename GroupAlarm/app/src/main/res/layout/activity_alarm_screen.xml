<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.groupalarm.asijge.groupalarm.AlarmScreenActivity">

    <AnalogClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/analogClock"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="false"
        android:focusable="false"/>

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_below="@+id/analogClock"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="false"
        android:focusable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarm_textView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="false"
        android:focusable="false"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_snooze_icon"
        android:id="@+id/alarm_snooze_button"
        android:layout_below="@+id/alarm_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="6dp"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_stop_alarm_icon"
        android:id="@+id/alarm_stop_button"
        android:layout_marginTop="40dp"
        android:padding="6dp"
        android:layout_below="@+id/alarm_snooze_button"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
